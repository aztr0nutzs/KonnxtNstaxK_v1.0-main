<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#010113"
                android:endColor="#040617"
                android:angle="270"/>
        </shape>
    </item>
    <item android:top="24dp" android:left="16dp" android:right="16dp">
        <shape android:shape="rectangle">
            <solid android:color="#0B0B1C"/>
            <corners android:radius="18dp"/>
            <padding android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp"/>
        </shape>
    </item>
    <item android:gravity="center_horizontal" android:top="80dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#20254A"
                android:endColor="#050617"
                android:angle="270"/>
            <corners android:radius="24dp"/>
            <size android:width="250dp" android:height="18dp"/>
        </shape>
    </item>
    <item android:bottom="28dp" android:left="12dp" android:right="12dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1F2A3B"
                android:endColor="#050617"
                android:angle="90"/>
            <corners android:radius="36dp"/>
        </shape>
    </item>
</layer-list>
